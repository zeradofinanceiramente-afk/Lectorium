{
  "id": "/",
  "scope": "/",
  "name": "Lectorium",
  "short_name": "Lectorium",
  "description": "Um Workspace Acadêmico PWA serverless para visualizar PDFs do Google Drive, fazer anotações e criar mapas mentais.",
  "lang": "pt-BR",
  "dir": "ltr",
  "start_url": "/?utm_source=pwa",
  "display": "standalone",
  "display_override": [
    "window-controls-overlay",
    "standalone",
    "minimal-ui"
  ],
  "background_color": "#09090b",
  "theme_color": "#09090b",
  "orientation": "any",
  "categories": [
    "productivity",
    "utilities"
  ],
  "launch_handler": {
    "client_mode": "focus-existing"
  },
  "icons": [
    {
      "src": "icons/icon-192.png",
      "sizes": "192x192",
      "type": "image/png",
      "purpose": "any"
    },
    {
      "src": "icons/icon-512.png",
      "sizes": "512x512",
      "type": "image/png",
      "purpose": "any"
    },
    {
      "src": "icons/maskable-icon-512.png",
      "sizes": "512x512",
      "type": "image/png",
      "purpose": "maskable"
    },
    {
      "src": "icons/maskable-icon.svg",
      "sizes": "any",
      "type": "image/svg+xml",
      "purpose": "maskable"
    }
  ],
  "shortcuts": [
    {
      "name": "Meus Arquivos",
      "short_name": "Arquivos",
      "description": "Abrir lista de arquivos do Drive",
      "url": "/?mode=browser&utm_source=pwa",
      "icons": [
        {
          "src": "icons/shortcut-files.svg",
          "sizes": "any",
          "type": "image/svg+xml"
        }
      ]
    },
    {
      "name": "Novo Mapa Mental",
      "short_name": "Mapa Mental",
      "description": "Criar um novo mapa mental",
      "url": "/?mode=mindmaps&utm_source=pwa",
      "icons": [
        {
          "src": "icons/shortcut-mindmap.svg",
          "sizes": "any",
          "type": "image/svg+xml"
        }
      ]
    }
  ],
  "file_handlers": [
    {
      "action": "/?source=filehandler",
      "accept": {
        "application/pdf": [".pdf"],
        "application/json": [".mindmap", ".json"]
      },
      "icons": [
        {
          "src": "icons/file-pdf.svg",
          "sizes": "512x512",
          "type": "image/svg+xml"
        }
      ],
      "launch_type": "single-client"
    }
  ]
}